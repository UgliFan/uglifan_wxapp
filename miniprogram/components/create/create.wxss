.create-wrapper {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    width: 100%;
    height: 100%;
    z-index: 999;
    background-color: rgba(0,0,0,.2);
}
.create-body {
    position: relative;
    width: 690rpx;
    height: 100%;
    left: 50%;
    top: 100rpx;
    transform: translateX(-50%) translateY(100%);
    background-color: #fff;
    border-radius: 40rpx 40rpx 0 0;
    box-shadow: 0 0 40rpx 0 rgba(0,0,0,.2);
    transition: all .3s ease;
    box-sizing: border-box;
    overflow: hidden;
}
.create-wrapper.show {
    display: block;
}
.create-body.anime {
    transform: translateX(-50%) translateY(0);
}
.btn-close {
    position: absolute;
    top: 20rpx;
    right: 20rpx;
    width: 50rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    color: #fff;
    font-weight: 700;
    font-size: 50rpx;
    z-index: 2;
}
.create-header {
    position: relative;
    height: 90rpx;
    background-color: #F2A905;
    box-sizing: border-box;
    overflow: hidden;
    z-index: 2;
}
.create-tab {
    margin: 30rpx auto 0;
    width: 240rpx;
    height: 60rpx;
}
.tab-item {
    width: 50%;
    height: 56rpx;
    line-height: 56rpx;
    text-align: center;
    color: #222;
    float: left;
    font-size: 34rpx;
    border-bottom: 4rpx solid transparent;
}
.tab-item.cursor {
    border-bottom: 4rpx solid #222;
}