.create-wrapper {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    width: 100%;
    height: 100%;
    z-index: 999;
    background-color: rgba(0,0,0,.6);
}
.create-body {
    position: absolute;
    height: 900rpx;
    left: 0;
    right: 0;
    bottom: 0;
    transform: translateY(100%);
    background-color: #fff;
    border-radius: 20rpx 20rpx 0 0;
    box-shadow: 0 0 40rpx 0 rgba(0,0,0,.4);
    transition: all .3s ease;
    box-sizing: border-box;
    overflow: hidden;
}
.create-wrapper.show {
    display: block;
}
.create-body.anime {
    transform: translateY(0);
}
.btn-close {
    position: absolute;
    top: 20rpx;
    right: 20rpx;
    width: 50rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    color: #fff;
    font-weight: 700;
    font-size: 46rpx;
    z-index: 2;
}
.create-header {
    position: relative;
    background-color: #F2A905;
    height: 90rpx;
    overflow: hidden;
    z-index: 2;
}
.create-tab {
    position: absolute;
    bottom: 0;
    left: 50%;
    margin-left: -120rpx;
    width: 240rpx;
    height: 80rpx;
}
.tab-item {
    position: relative;
    bottom: 0;
    width: 50%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    color: #222;
    float: left;
    font-size: 34rpx;
    border-bottom: 6rpx solid transparent;
    box-sizing: border-box;
}
.tab-item.cursor {
    border-bottom: 6rpx solid #222;
}
.category-list-large {
    opacity: 0;
    position: absolute;
    top: 90rpx;
    left: 0;
    right: 0;
    height: 810rpx;
}
.category-list-small {
    opacity: 0;
    position: absolute;
    top: 90rpx;
    left: 0;
    right: 0;
    height: 310rpx;
}
.category-list {
    width: 100%;
    background-color: #fff;
    box-sizing: border-box;
}
.category-item {
    display: inline-block;
    vertical-align: top;
    width: 100rpx;
    height: 160rpx;
    margin: 25rpx;
}
.category-item.cursor .category-icon {
    background-color: #e6a23c;
    border-color: #e6a23c;
    color: #fff;
}
.category-icon {
    width: 100rpx;
    height: 100rpx;
    line-height: 100rpx;
    border-radius: 50%;
    overflow: hidden;
    background-color: #f4f4f5;
    color: #909399;
    border: 1rpx solid #d3d4d6;
    box-sizing: border-box;
    text-align: center;
    font-size: 60rpx;
}
.category-name {
    width: 100rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    font-size: 30rpx;
    color: #222;
}

.input-view {
    position: absolute;
    width: 100%;
    height: 500rpx;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: #F2F6FC;
    transform: translateY(100%);
    transition: all .3s ease;
    box-sizing: border-box;
    border-top: 1rpx solid #E4E7ED;
}
.input-view.shown {
    transform: translateY(0);
}
.input-result {
    height: 78rpx;
    border-bottom: 1rpx solid #E4E7ED;
    display: flex;
    flex-direction: row;
    justify-content: left;
}
.remark-wrapper, .summary {
    height: 78rpx;
    line-height: 78rpx;
    flex: 1;
}
.remark-wrapper .remark-icon {
    float: left;
    width: 78rpx;
    height: 78rpx;
    line-height: 78rpx;
    text-align: center;
    font-size: 40rpx;
    color: #F2A905;
}
.remark-wrapper input {
    position: relative;
    height: 78rpx;
    line-height: 78rpx;
    text-align: left;
    font-size: 30rpx;
    color: #606266;
}
.summary {
    text-align: right;
    padding-right: 20rpx;
    font-size: 60rpx;
    color: #222;
    font-weight: 700;
}
.keyboard-area {
    height: 420rpx;
}
.keyboard-btn {
    float: left;
    width: 175rpx;
    height: 105rpx;
    line-height: 104rpx;
    box-sizing: border-box;
    border-right: 1rpx solid #E4E7ED;
    border-bottom: 1rpx solid #E4E7ED;
    text-align: center;
    font-size: 40rpx;
    color: #222;
}
.keyboard-btn.right {
    width: 225rpx;
    border-right: 1rpx solid transparent;
}
.keyboard-btn.ufi-backdelete {
    font-size: 50rpx;
}
.keyboard-btn.submit {
    background-color: #F2A905;
    color: #fff;
}