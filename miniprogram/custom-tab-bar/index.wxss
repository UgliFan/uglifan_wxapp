.tab-bar {
    width: 100%;
    left: 0;
    right: 0;
    height: 110rpx;
    position: fixed;
    bottom: 0;
    font-size: 24rpx;
    border-top: 1rpx solid rgba(0,0,0,.2);
    z-index: 300;
    background-color: #fff;
}
.tab-bar.x {
    height: 160rpx;
}
.tab-bar-item {
    float: left;
    width: 25%;
    padding: 10rpx 0;
    text-align: center;
    color: #222;
    box-sizing: border-box;
}
.tab-bar-item:nth-child(2) {
    padding-right: 60rpx;
}
.tab-bar-item:nth-child(3) {
    padding-left: 60rpx;
}
.tab-bar-item .title {
    height: 30rpx;
    line-height: 30rpx;
}
.tab-bar-item.cursor {
    color: #F2A905;
}
.icon {
    height: 60rpx;
    line-height: 60rpx;
    font-size: 50rpx;
    text-align: center;
}
.center-btn {
    position: absolute;
    top: -20rpx;
    left: 320rpx;
    width: 110rpx;
    height: 110rpx;
    border-radius: 50%;
    background-color: #fff;
    border-top: 1rpx solid rgba(0,0,0,.2);
    text-align: center;
}
.center-btn .icon {
    display: inline-block;
    vertical-align: top;
    margin-top: 5rpx;
    width: 100rpx;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 80rpx;
    color: #fff;
    background-color: #F2A905;
    border-radius: 50%;
}