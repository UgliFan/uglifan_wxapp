page {
    background: #f6f6f6;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}
.header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: 120rpx;
    background-color: #F2A905;
    box-sizing: border-box;
    padding: 20rpx 40rpx;
    display: flex;
    flex-direction: row;
}
.header .date {
    height: 80rpx;
    flex: 1;
}
.header .date .date-year {
    font-size: 24rpx;
    height: 30rpx;
    line-height: 1;
    color: #444;
}
.header .date .date-month {
    margin-top: 6rpx;
    font-size: 44rpx;
    height: 44rpx;
    line-height: 44rpx;
    white-space: nowrap;
    color: #222;
}
.date-month .month-text {
    display: inline-block;
    vertical-align: top;
    font-size: 30rpx;
    line-height: 1;
    margin-top: 10rpx;
}
.date-month .icon-down {
    display: inline-block;
    vertical-align: top;
    margin-left: 4rpx;
    font-size: 20rpx;
    transform: rotate(180deg);
}
.header .count-block {
    height: 80rpx;
    flex: 1;
}
.count-block .count-title {
    display: block;
    height: 30rpx;
    font-size: 24rpx;
    line-height: 1;
    color: #444;
}
.count-block .count-value {
    display: block;
    margin-top: 6rpx;
    color: #222;
    height: 44rpx;
    line-height: 44rpx;
    font-size: 44rpx;
}
.btn-create {
    width: 80rpx;
    height: 80rpx;
    line-height: 80rpx;
    position: fixed;
    border-radius: 50%;
    box-shadow: 0 0 10rpx 0 rgba(0,0,0,.2);
    background-color: #F2A905;
    color: #fff;
    font-size: 50rpx;
    text-align: center;
    bottom: 20rpx;
    right: 20rpx;
    font-weight: 700;
}