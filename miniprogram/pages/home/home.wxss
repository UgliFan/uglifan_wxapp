page {
    padding: 120rpx 0;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}
.header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: 120rpx;
    background-color: #F2A905;
    box-sizing: border-box;
    padding: 20rpx 40rpx;
    display: flex;
    flex-direction: row;
    z-index: 2;
}
.header .date {
    height: 80rpx;
    flex: 1;
}
.header .date .date-year {
    font-size: 24rpx;
    height: 30rpx;
    line-height: 1;
    color: #444;
}
.header .date .date-month {
    margin-top: 6rpx;
    font-size: 44rpx;
    height: 44rpx;
    line-height: 44rpx;
    white-space: nowrap;
    color: #222;
}
.date-month .month-text {
    display: inline-block;
    vertical-align: top;
    font-size: 30rpx;
    line-height: 1;
    margin-top: 10rpx;
}
.date-month .icon-down {
    display: inline-block;
    vertical-align: top;
    margin-left: 4rpx;
    font-size: 20rpx;
    transform: rotate(180deg);
}
.header .count-block {
    height: 80rpx;
    flex: 1;
}
.count-block .count-title {
    display: block;
    height: 30rpx;
    font-size: 24rpx;
    line-height: 1;
    color: #444;
}
.count-block .count-value {
    display: block;
    margin-top: 6rpx;
    color: #222;
    height: 44rpx;
    line-height: 44rpx;
    font-size: 44rpx;
}
.scroll-wrapper {
    position: relative;
    z-index: 1;
    width: 100%;
}
.tally-item {
    position: relative;
    width: 100%;
    height: 100rpx;
    border-bottom: 1rpx solid #eee;
    display: flex;
    flex-direction: row;
}
.mine-bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 100%;
    line-height: 100rpx;
    text-align: right;
    z-index: 1;
    font-size: 40rpx;
    padding-right: 35%;
    color: #fff;
    background: linear-gradient(to left, rgba(0,0,0,.2), transparent);
}
.item-col {
    flex: 0 0 auto;
    width: 15%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    color: #909399;
    font-size: 36rpx;
    flex-shrink: 0;
    box-sizing: border-box;
    z-index: 2;
}
.item-col.info {
    width: 50%;
    padding-left: 20rpx;
    color: #222;
    overflow: hidden;
}
.item-col.summary {
    width: 20%;
    text-align: right;
    font-weight: 700;
    padding-right: 30rpx;
    font-size: 30rpx;
    color: #f56c6c;
}
.item-col.summary.out {
    color: #67c23a;
}
.category-icon {
    width: 70rpx;
    height: 70rpx;
    line-height: 70rpx;
    display: inline-block;
    vertical-align: top;
    margin-top: 15rpx;
    text-align: center;
    border-radius: 50%;
    background-color: #EBEEF5;
    color: #F2A905;
    font-size: 40rpx;
}
.category-name {
    height: 60rpx;
    line-height: 66rpx;
    font-size: 34rpx;
    text-align: left;
    font-weight: 700;
}
.item-col.info .remark {
    height: 40rpx;
    line-height: 34rpx;
    text-align: left;
    font-size: 30rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.item-col.info .remark.empty {
    color: #909399;
}
.btn-create {
    width: 80rpx;
    height: 80rpx;
    line-height: 80rpx;
    position: fixed;
    right: 20rpx;
    bottom: 20rpx;
    border-radius: 50%;
    box-shadow: 0 0 10rpx 0 rgba(0,0,0,.2);
    background-color: #F2A905;
    color: #fff;
    font-size: 50rpx;
    text-align: center;
    font-weight: 700;
    z-index: 100;
}