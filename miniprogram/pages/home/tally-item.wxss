.tally-group {
    position: relative;
    width: 750rpx;
    overflow: hidden;
    border-bottom: 1rpx solid rgba(0,0,0,.1);
}
.group-title {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    box-sizing: border-box;
    padding: 0 30rpx;
    font-size: 30rpx;
    background-color: #fdf6ec;
    font-weight: 700;
    color: #222;
}
.tally-item {
    position: relative;
    width: 100%;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    transition: all .3s ease;
}
.tally-item:last-child .item-col {
    border: none;
}
.tally-item.options {
    transform: translateX(-300rpx);
}
.options-wrapper {
    position: absolute;
    right: -300rpx;
    top: 0;
    height: 100rpx;
    width: 300rpx;
    display: flex;
    flex-direction: row;
}
.option-item {
    flex: 1 0 auto;
    width: 150rpx;
    text-align: center;
    height: 100rpx;
    line-height: 100rpx;
    background-color: #e6a23c;
    color: #fff;
    font-size: 34rpx;
    letter-spacing: 8rpx;
    border-right: 1rpx solid rgba(0,0,0,.1);
    box-sizing: border-box;
}
.option-item.del {
    border: none;
    background-color: #f56c6c;
}
.item-col {
    flex: 0 0 auto;
    width: 15%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    color: #909399;
    font-size: 36rpx;
    flex-shrink: 0;
    box-sizing: border-box;
    z-index: 2;
    border-bottom: 1rpx solid rgba(0,0,0,.1);
}
.item-col.icon {
    border-bottom: none;
}
.item-col.info {
    width: 50%;
    padding-left: 20rpx;
    color: #222;
    overflow: hidden;
}
.item-col.summary {
    width: 20%;
    text-align: right;
    font-weight: 700;
    padding-right: 30rpx;
    font-size: 30rpx;
    color: #f56c6c;
}
.item-col.summary.out {
    color: #178A3D;
}
.item-col .user-info {
    width: 100rpx;
    height: 100rpx;
    margin: 0 auto;
}
.user-info image {
    margin-top: 20rpx;
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    overflow: hidden;
}
.category-icon {
    width: 70rpx;
    height: 70rpx;
    line-height: 70rpx;
    display: inline-block;
    vertical-align: top;
    margin-top: 15rpx;
    text-align: center;
    border-radius: 50%;
    background-color: #EBEEF5;
    color: #F2A905;
    font-size: 40rpx;
}
.category-name {
    position: relative;
    height: 60rpx;
    line-height: 66rpx;
    font-size: 30rpx;
    text-align: left;
    font-weight: 700;
    white-space: nowrap;
    overflow: hidden;
}
.category-name text {
    position: absolute;
    right: 0;
    top: 0;
    display: inline-block;
    vertical-align: top;
    height: 60rpx;
    line-height: 66rpx;
    font-size: 24rpx;
    font-weight: 400;
    color: #d3d4d6;
}
.category-name text:before {
    margin-right: 10rpx;
}
.item-col.info .remark {
    height: 40rpx;
    line-height: 34rpx;
    text-align: left;
    font-size: 28rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.item-col.info .remark.empty {
    color: #909399;
}