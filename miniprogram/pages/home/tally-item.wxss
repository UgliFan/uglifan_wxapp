.tally-item {
    position: relative;
    width: 100%;
    height: 100rpx;
    border-bottom: 1rpx solid rgba(0,0,0,.1);
    display: flex;
    flex-direction: row;
    transition: all .3s ease;
}
.tally-item.options {
    transform: translateX(-300rpx);
}
.options-wrapper {
    position: absolute;
    right: -300rpx;
    top: 0;
    height: 100rpx;
    width: 300rpx;
    display: flex;
    flex-direction: row;
}
.option-item {
    flex: 1 0 auto;
    width: 150rpx;
    text-align: center;
    height: 100rpx;
    line-height: 100rpx;
    background-color: #e6a23c;
    color: #fff;
    font-size: 34rpx;
    letter-spacing: 8rpx;
    border-right: 1rpx solid rgba(0,0,0,.1);
    box-sizing: border-box;
}
.option-item.del {
    border: none;
    background-color: #f56c6c;
}
.mine-bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 100%;
    line-height: 100rpx;
    text-align: right;
    z-index: 1;
    font-size: 40rpx;
    padding-right: 35%;
    color: #fff;
    background: linear-gradient(to left, rgba(0,0,0,.1), transparent);
    opacity: .8;
}
.item-col {
    flex: 0 0 auto;
    width: 15%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    color: #909399;
    font-size: 36rpx;
    flex-shrink: 0;
    box-sizing: border-box;
    z-index: 2;
}
.item-col.info {
    width: 50%;
    padding-left: 20rpx;
    color: #222;
    overflow: hidden;
}
.item-col.summary {
    width: 20%;
    text-align: right;
    font-weight: 700;
    padding-right: 30rpx;
    font-size: 30rpx;
    color: #f56c6c;
}
.item-col.summary.out {
    color: #67c23a;
}
.category-icon {
    width: 70rpx;
    height: 70rpx;
    line-height: 70rpx;
    display: inline-block;
    vertical-align: top;
    margin-top: 15rpx;
    text-align: center;
    border-radius: 50%;
    background-color: #EBEEF5;
    color: #F2A905;
    font-size: 40rpx;
}
.category-name {
    height: 60rpx;
    line-height: 66rpx;
    font-size: 34rpx;
    text-align: left;
    font-weight: 700;
}
.item-col.info .remark {
    height: 40rpx;
    line-height: 34rpx;
    text-align: left;
    font-size: 30rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.item-col.info .remark.empty {
    color: #909399;
}