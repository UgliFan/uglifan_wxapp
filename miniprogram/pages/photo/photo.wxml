<view class="photo-page">
    <view class="list-left">
        <view class="photo-item" wx:for="{{listL}}" wx:key="{{item._id}}" bindtap="previewImage" data-item="{{item}}">
            <image class="item-cover" mode="widthFix" src="{{item.src}}" catchlongpress="showRemove" data-item="{{item}}" data-index="{{index}}" data-pos="{{0}}"></image>
            <view class="options {{item.showDel ? 'shown' : ''}}" catchtap="closeOptions" data-item="{{item}}" data-index="{{index}}" data-pos="{{0}}">
                <view class="del ufi-delete" catchtap="doDelete" data-item="{{item}}" data-index="{{index}}" data-pos="{{0}}"></view>
            </view>
        </view>
    </view>
    <view class="list-right">
        <view class="photo-item" wx:for="{{listR}}" wx:key="{{item._id}}" bindtap="previewImage" data-item="{{item}}">
            <image class="item-cover" mode="widthFix" src="{{item.src}}" catchlongpress="showRemove" data-item="{{item}}" data-index="{{index}}" data-pos="{{1}}"></image>
            <view class="options {{item.showDel ? 'shown' : ''}}" catchtap="closeOptions" data-item="{{item}}" data-index="{{index}}" data-pos="{{1}}">
                <view class="del ufi-delete" catchtap="doDelete" data-item="{{item}}" data-index="{{index}}" data-pos="{{1}}"></view>
            </view>
        </view>
    </view>
    <view class="btn-add ufi-add" bindtap="doUpload"></view>
</view>
