.photo-page {
    width: 100%;
    padding-bottom: 100rpx;
    display: flex;
    flex-direction: row;
    overflow: hidden;
}
.list-loading {
    position: fixed;
    top: 0;
    left: 50%;
    width: 100rpx;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    font-size: 40rpx;
    transform: translateX(-50%) rotate(0deg);
    animation: loading 1s infinite;
}
@keyframes loading {
    0% {transform: translateX(-50%) rotate(0deg); }
    100% {transform: translateX(-50%) rotate(360deg); }
}
.list-left, .list-right {
    padding-top: 20rpx;
    flex: 1;
}
.list-left {
    padding-left: 10rpx;
}
.list-right {
    padding-right: 10rpx;
}
.photo-item {
    position: relative;
    margin: 0 10rpx 20rpx 10rpx;
    width: 345rpx;
    box-shadow: 0 0 10rpx 0 rgba(0,0,0,.2);
    border-radius: 10rpx;
    overflow: hidden;
}
.photo-info {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 60rpx;
    padding-top: 40rpx;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.8) 0, transparent 100%);
    border-radius: 0 0 10rpx 10rpx;
}
.photo-tag {
    position: absolute;
    bottom: 40rpx;
    left: 0;
    right: 60rpx;
    height: 30rpx;
    padding: 0 20rpx;
    box-sizing: border-box;
}
.photo-tag text {
    float: left;
    font-size: 20rpx;
    color: #fff;
    background-color: rgba(0,0,0,.6);
    margin-right: 6rpx;
    max-width: 100rpx;
    height: 30rpx;
    line-height: 30rpx;
    padding: 0 6rpx;
    border-radius: 8rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.photo-name {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 60rpx;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 22rpx;
    font-weight: 700;
    color: #fff;
    padding: 0 20rpx;
    box-sizing: border-box;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}
.photo-location {
    position: absolute;
    right: 0;
    bottom: 10rpx;
    width: 60rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    color: #fff;
    font-size: 40rpx;
    font-weight: 700;
}
.photo-item .options {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    transition: all .3s ease;
    background-color: rgba(0,0,0,.4);
    opacity: 0;
    z-index: -1;
}
.options.shown {
    opacity: 1;
    z-index: 2;
}
.options.shown .del {
    opacity: 1;
    transform: translateY(0);
}
.options .del {
    width: 100rpx;
    height: 100rpx;
    line-height: 100rpx;
    border-radius: 50%;
    position: relative;
    top: 50%;
    margin: -50rpx auto 0;
    background-color: #F56C6C;
    color: #fff;
    text-align: center;
    font-size: 60rpx;
    transform: translateY(-100%);
    opacity: 0;
    transition: all .3s ease;
}
.photo-item.add {
    height: 300rpx;
    line-height: 300rpx;
    font-size: 200rpx;
    text-align: center;
    color: rgba(0,0,0,.4);
    box-shadow: none;
    box-sizing: border-box;
    border: 1rpx solid rgba(0,0,0,.2);
}
.photo-item .item-cover {
    width: 100%;
    vertical-align: top;
    border: none;
}
.btn-add {
    width: 80rpx;
    height: 80rpx;
    line-height: 80rpx;
    position: fixed;
    bottom: 20rpx;
    right: 20rpx;
    border-radius: 50%;
    box-shadow: 0 0 10rpx 0 rgba(0,0,0,.2);
    background-color: #F2A905;
    color: #fff;
    font-size: 50rpx;
    text-align: center;
    font-weight: 700;
}