page {
    background: #f6f6f6;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    padding-top: 100rpx;
}
.type-tab {
    position: fixed;
    left: 0;
    right: 0;
    display: flex;
    flex-direction: row;
    height: 100rpx;
    width: 100%;
    background-color: #F2A905;
    justify-content: center;
    padding-top: 20rpx;
    box-sizing: border-box;
    z-index: 2;
}
.type-tab .type-item {
    width: 260rpx;
    height: 60rpx;
    line-height: 56rpx;
    text-align: center;
    box-sizing: border-box;
    font-size: 26rpx;
    transition: all .3s ease;
}
.type-item.active {
    background-color: #222;
    color: #F2A905;
}
.type-item:first-child {
    border-radius: 8rpx 0 0 8rpx;
    border: 2rpx solid #222;
    border-right: none;
}
.type-item:last-child {
    border-radius: 0 8rpx 8rpx 0;
    border: 2rpx solid #222;
    border-left: none;
}

.category-list {
    width: 750rpx;
    margin-top: 20rpx;
    border-top: 1rpx solid rgba(0, 0, 0, 0.1);
    border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
    overflow: hidden;
}
.category-item {
    height: 100rpx;
    line-height: 100rpx;
    background-color: #fff;
    padding: 0 20rpx 0 40rpx;
    display: flex;
    justify-content: row;
    align-items: center;
    border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
    transition: all .3s ease;
}
.category-item.del {
    transform: translateX(-140rpx);
}
.category-item:last-child {
    border-bottom: none;
}
.category-item-del {
    width: 50rpx;
    height: 50rpx;
    line-height: 50rpx;
    border-radius: 50%;
    background-color: #F56C6C;
    margin-right: 60rpx;
    color: #fff;
    font-size: 40rpx;
    text-align: center;
    font-weight: 700;
}
.category-item-icon {
    width: 50rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    border-radius: 50%;
    background-color: #eee;
    margin-right: 40rpx;
    color: #333;
}
text {
    flex: 1;
    font-size: 30rpx;
    color: #333;
}
.category-item-sort {
    width: 70rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    color: #aaa;
    font-size: 50rpx;
}
.category-item-delete {
    position: absolute;
    top: 0;
    right: -140rpx;
    width: 140rpx;
    height: 100%;
    text-align: center;
    color: #fff;
    background-color: #f00;
    font-size: 30rpx;
}