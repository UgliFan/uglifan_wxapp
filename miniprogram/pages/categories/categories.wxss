page {
    background: #f6f6f6;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}
.type-tab {
    display: flex;
    flex-direction: row;
    height: 100rpx;
    width: 100%;
    background-color: #F2A905;
    justify-content: center;
    padding-top: 20rpx;
    box-sizing: border-box;
}
.type-tab .type-item {
    width: 260rpx;
    height: 60rpx;
    line-height: 56rpx;
    text-align: center;
    box-sizing: border-box;
    font-size: 26rpx;
    transition: all .3s ease;
}
.type-item.active {
    background-color: #222;
    color: #F2A905;
}
.type-item:first-child {
    border-radius: 8rpx 0 0 8rpx;
    border: 2rpx solid #222;
    border-right: none;
}
.type-item:last-child {
    border-radius: 0 8rpx 8rpx 0;
    border: 2rpx solid #222;
    border-left: none;
}

.category-list {
    margin-top: 20rpx;
    border-top: 1rpx solid rgba(0, 0, 0, 0.1);
    border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}
.category-item {
    height: 100rpx;
    line-height: 100rpx;
    background-color: #fff;
    padding: 0 40rpx;
    display: flex;
    justify-content: row;
    align-items: center;
}
.category-item-del {
    width: 50rpx;
    height: 50rpx;
    line-height: 40rpx;
    border-radius: 50%;
    background-color: #f00;
    margin-right: 40rpx;
    color: #fff;
    font-size: 50rpx;
    text-align: center;
}
.category-item-icon {
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
    background-color: #f7f7f7;
    margin-right: 40rpx;
}
text {
    flex: 1;
    font-size: 30rpx;
}
.category-item-sort {
    width: 70rpx;
    height: 50rpx;
    background-color: #f7f7f7;
}